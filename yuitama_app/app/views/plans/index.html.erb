<%= content_for(:maincontent)  do %>
<p id="notice"><%= notice %></p>

<div class="container-fluid px-4">
    <%= image_tag("plans.png", align:"left", class:"img-responsive ", size:"300x135") %>
    <%= link_to image_tag("New_Plan.png", align:"right", class:"img-responsive", size:"300x135"), "/plans/new" %>
</div>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Image</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <div class="container-fluid">
    <%=form_tag("/plans", method:"get") do%>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
    <%= select_tag(:selected_val, options_for_select(["内容","ハッシュタグ"]))%>
    <%end%>

    <div class="row pt-4">
      <div class=" card-deck-wrapper">
        <div class=" card-deck">
          <%= render(partial: "index", collection:@plans)%>
        </div>
      </div>
    </div>
  </div>

<% end %>
