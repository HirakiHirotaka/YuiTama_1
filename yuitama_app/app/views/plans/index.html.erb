<%= content_for(:maincontent)  do %>
<p id="notice"><%= notice %></p>

<h1>Plans <div align="right"><%= link_to 'New Plan', new_plan_path %></div></h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Image</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <div class="container-fluid">
    <%=form_tag("/plans", method:"get") do%>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
    <%= select_tag(:selected_val, options_for_select(["内容","ハッシュタグ"]))%>
    <%end%>

  <%= render(partial: "index", collection:@plans)%>
  </div>

<% end %>
