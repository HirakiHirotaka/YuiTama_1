  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Title:</strong>
          <%= plan.title %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Scheduled_date:</strong>
          <%= plan.scheduled_date %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Image:</strong>
          <%= image_tag show_image_plan_path(plan),size:"300x300" %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Content:</strong>
          <%= plan.content%>
        </p>
      </div>
    </div>


    <div class="row">
      <div class="col-md-12">
        <p>
          <strong>Creator:</strong>
          <%= link_to("#{Utinaantyu.find(plan.creator_id).name}", "/utinaantyus/#{Utinaantyu.find(plan.creator_id).id}" ) %>
        </p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 p-0">
        <div id="carousel1" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
              <%= image_tag show_image_plan_path(plan), class:"d-block img-fluid w-100"%>

              <!-- 写真に文字被せるなら以下のタグ内に記載 -->
              <div class="carousel-caption">
              </div>
            </div>
            <div class="carousel-item">
              <%= image_tag "no_image.png", class:"d-block img-fluid w-100"%>
              <div class="carousel-caption">
              </div>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carousel1" role="button" data-slide="prev"> <span class="carousel-control-prev-icon" aria-hidden="true"></span> <span class="sr-only">Previous</span> </a>
          <a class="carousel-control-next" href="#carousel1" role="button" data-slide="next"> <span class="carousel-control-next-icon" aria-hidden="true"></span> <span class="sr-only">Next</span> </a>
        </div>
      </div>
      <!-- ここに写真右側の文字 -->
      <div class="align-self-center p-5 col-md-6">
        <h1 class="mb-4"><%=@plan.title%></h1>

        <p class="mb-5"><%= plan.scheduled_date %></p>
        <p class="mb-5"><%=@plan.content%></p>
        <p class="mb-5">
          <%= link_to("#{Utinaantyu.find(plan.creator_id).name}", "/utinaantyus/#{Utinaantyu.find(plan.creator_id).id}" ) %>
        </p>
      </div>
    </div>

  </div>
