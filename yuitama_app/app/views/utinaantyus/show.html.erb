<%= content_for(:maincontent) do %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @utinaantyu.name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @utinaantyu.age %>
</p>

<p>
  <strong>Mailaddress:</strong>
  <%= @utinaantyu.mailaddress %>
</p>

<% @plans = Plan.where(creator_id: @utinaantyu.id) %>
<% if @plans != nil%>
<div class="container-fluid">
  <h2>この方のプラン</h2>

  <% @plans.each do |plan| %>
  <% if @counter%3 == 0%>
  <div class="row">
  <%end%>
    <div class="col-md-4">
      <div class="card">
        <% if plan.image != nil %>
          <%= link_to image_tag(show_image_plan_path(plan), class: "img-responsive card-img-top", size:"300x300"), plan %>
        <% else %>
          <%= link_to image_tag("no_image.png", class: "img-responsive card-img-top", size:"300x300"), plan %>
        <% end %>
        <div class="card-body">
          <p class="card-title"><b>案内内容</b></p>
          <p class="card-text text-truncate"><%= plan.content %></p>
        </div>
      </div>
    </div>

    <% if @counter%3 == 2%>
      </div>
    <% end %>
  <%@counter+=1%>
  <% end %>
</div>
<% end %>


<%if @utinaantyu.id == @currentuser.id%>
<%= link_to 'Edit', edit_utinaantyu_path(@utinaantyu) %>
<%end%>

<% end %>
