<% @user.errors.full_messages.each do |message| %>
      <%= message %>
<% end %>


<%= form_tag("/users/#{params[:id]}/update") do %>

<p>ユーザー名</p>
<!-- nameを初期値として表示してください -->
<input name="name" value="<%=@user.name%>"

<p>メールアドレス</p>
<!-- emailを初期値として表示してください -->
<input name="email" value="<%=@user.email%>"



<input type="submit" value="save">

<%end%>